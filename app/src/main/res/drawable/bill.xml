<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lớp màu đầu tiên (màu xanh lá) -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="50dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/red"/> <!-- Màu xanh -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Lớp màu mới (ví dụ: màu vàng) -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="50dp"
        android:bottom="100dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Màu vàng -->
        </shape>
    </item>

    <!-- Lớp màu thứ hai (màu trắng) -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="100dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Màu trắng -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>
