<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignupActivity"
    android:background="@drawable/gradient_red_loang">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/btn_6"
        android:scaleType="centerCrop"
        android:alpha="0.36" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="130dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:layout_marginEnd="8dp"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App"
                    android:textColor="@color/white"
                    android:textSize="45sp"/>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSingUp"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:minHeight="350dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="vertical"
            android:background="@drawable/input_container_background"
            android:padding="40dp"
            android:layout_gravity="center"
            >
            <EditText
                android:id="@+id/fullNameEdt"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:hint="Họ và tên"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColorHint="@color/blue_grey"
                android:textSize="16sp"
                android:ems="10"
                android:background="@drawable/edittext_2_background"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/emailEdt"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:hint="Email address"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColorHint="@color/blue_grey"
                android:textSize="16sp"
                android:ems="10"
                android:background="@drawable/edittext_2_background"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/phoneEdt"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:hint="Số điện thoại"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColorHint="@color/blue_grey"
                android:textSize="16sp"
                android:ems="10"
                android:background="@drawable/edittext_2_background"
                android:inputType="text"
                />

            <EditText
                android:id="@+id/passEdt"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edittext_2_background"
                android:ems="10"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColorHint="@color/blue_grey"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/locationEdt"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:hint="Địa chỉ"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColorHint="@color/blue_grey"
                android:textSize="16sp"
                android:ems="10"
                android:background="@drawable/edittext_2_background"
                android:inputType="text"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signupBtn"
                style="@android:style/Widget.Button"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:background="@color/blue_grey"
                android:text="Đăng ký"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/layoutTextView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn có nhớ mật khẩu không ? "
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/txtSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng nhập"
                    android:textColor="@color/blue_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>